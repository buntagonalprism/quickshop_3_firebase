rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
  	function getList(listId) {
    	return get(/databases/$(database)/documents/lists/$(listId)).data
    }
  
    // Lists can be created by anyone logged in, and updated by owners and editors
    match /lists/{listId} {
      allow create: if request.auth.uid != null;
      allow read, update: if request.auth.uid in resource.data.editorIds;
    }
    
    // Invites can be created by list editors and read by the inviter
    match /invites/{inviteId} {
      allow create: if request.auth.uid in getList(request.resource.data.listId).editorIds;
      allow read: if request.auth.uid == resource.data.inviterId;
    }
  
  	// Otherwise disallow all access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}